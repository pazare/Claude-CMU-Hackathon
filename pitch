  <script>
    const slides = Array.from(document.querySelectorAll(".slide-frame"));
    const prevBtn = document.getElementById("prevBtn");
    const nextBtn = document.getElementById("nextBtn");
    const dotRow = document.getElementById("dotRow");
    let currentIndex = 0;

    // Build dots
    slides.forEach((_, i) => {
      const dot = document.createElement("div");
      dot.className = "dot" + (i === 0 ? " active" : "");
      dot.dataset.index = i;
      dotRow.appendChild(dot);
    });

    const dots = Array.from(document.querySelectorAll(".dot"));

    function updateSlide(newIndex) {
      if (newIndex < 0 || newIndex >= slides.length) return;
      slides[currentIndex].classList.remove("active");
      dots[currentIndex].classList.remove("active");
      currentIndex = newIndex;
      slides[currentIndex].classList.add("active");
      dots[currentIndex].classList.add("active");

      prevBtn.disabled = currentIndex === 0;
      nextBtn.disabled = currentIndex === slides.length - 1;
      nextBtn.textContent = currentIndex === slides.length - 1 ? "End" : "Next →";
      prevBtn.textContent = currentIndex === 0 ? "←" : "← Previous";
    }

    prevBtn.addEventListener("click", () => updateSlide(currentIndex - 1));
    nextBtn.addEventListener("click", () => updateSlide(currentIndex + 1));

    dots.forEach(dot => {
      dot.addEventListener("click", () => {
        updateSlide(Number(dot.dataset.index));
      });
    });

    // Keyboard navigation
    window.addEventListener("keydown", (e) => {
      if (e.key === "ArrowRight") updateSlide(currentIndex + 1);
      if (e.key === "ArrowLeft") updateSlide(currentIndex - 1);
    });

    // Initialize buttons
    updateSlide(0);
  </script>
</body>
</html>
